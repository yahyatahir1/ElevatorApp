<!-- Our calculator is setup -->
{{#if calc}}
  <div class="section section-basic">
    <h2>Up Peak Calculator</h2>

    {{input-main
      calc=calc
    }}

    <!-- Next which allows the user to move to the next stage -->
    {{#if isNextOne}}

    {{input-floors
      calc=calc
      inputUpdated=inputUpdated
    }}

    {{#if isNextTwo}}

    <!-- Results -->
    {{#if hasFloors}}
      {{display-results
        results=results
      }}
    {{/if}}

    {{else}}
      <button class="btn btn-lg btn-primary" {{action 'NextTwo'}}>
        Show Results
      </button>
    {{/if}}

    <!-- Reset function -->
    <button class="btn btn-lg btn-primary" {{action 'resetCalculator'}}>
      Reset Calculator
    </button>

    {{else}}
      <button class="btn btn-lg btn-primary" {{action 'nextOne'}}>
        Next
      </button>
    {{/if}}

  </div>
{{/if}}
